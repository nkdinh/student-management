{% extends 'base.html.twig' %}

{% block title %}Teacher{% endblock %}

{% block body %}
    <h1>Teacher</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ teacher.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ teacher.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ teacher.email }}</td>
            </tr>
            <tr>
                <th>Specialization</th>
                <td>{{ teacher.specialization }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ teacher.phone }}</td>
            </tr>
            <tr>
                <th>Assigned Course</th>
                <td>{{ assignedCourse ? assignedCourse.title : 'Not assigned to any course' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_teacher_index') }}">back to list</a>

    <a href="{{ path('app_teacher_edit', {'id': teacher.id}) }}">edit</a>

    {{ include('teacher/_delete_form.html.twig') }}
{% endblock %}
