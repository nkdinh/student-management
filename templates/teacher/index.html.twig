{% extends 'base.html.twig' %}

{% block title %}Teacher List{% endblock %}

{% block body %}
    <h1>Teacher List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Specialization</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for teacher in teachers %}
            <tr>
                <td>{{ teacher.id }}</td>
                <td>{{ teacher.name }}</td>
                <td>{{ teacher.email }}</td>
                <td>{{ teacher.specialization }}</td>
                <td>{{ teacher.phone }}</td>
                <td>
                    <a href="{{ path('app_teacher_show', {'id': teacher.id}) }}">show</a>
                    <a href="{{ path('app_teacher_edit', {'id': teacher.id}) }}">edit</a>
                    <a href="{{ path('app_teacher_delete', {'id': teacher.id}) }}">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_teacher_new') }}">Create new</a>
{% endblock %}
