{% extends 'base.html.twig' %}

{% block title %}Course List{% endblock %}

{% block body %}
    <h1>Course List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Credits</th>
                <th>Teacher</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>{{ course.id }}</td>
                <td>{{ course.title }}</td>
                <td>{{ course.description }}</td>
                <td>{{ course.credits }}</td>
                <td>{{ course.teacher ? course.teacher.name : 'Not assigned' }}</td>
                <td>
                    <a href="{{ path('app_course_show', {'id': course.id}) }}">Show</a>
                    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Edit</a>
                    <a href="{{ path('app_course_delete', {'id': course.id}) }}">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_course_new') }}">Create new</a>
{% endblock %}
