{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ student.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ student.email }}</td>
            </tr>
            <tr>
                <th>Dob</th>
                <td>{{ student.dob ? student.dob|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ student.phone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ student.address }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_student_index') }}">back to list</a>

    <a href="{{ path('app_student_edit', {'id': student.id}) }}">edit</a>

    {{ include('student/_delete_form.html.twig') }}

    <div class="card mt-4">
        <div class="card-header">
            <h3>Enrolled Courses</h3>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Course</th>
                        <th>Credits</th>
                        <th>Enrollment Date</th>
                    </tr>
                </thead>
                <tbody>
                    {% for enrollment in student.enrollments %}
                        <tr>
                            <td>{{ enrollment.course.title }}</td>
                            <td>{{ enrollment.course.credits }}</td>
                            <td>{{ enrollment.enrollmentDate|date('Y-m-d') }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">No courses enrolled</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
